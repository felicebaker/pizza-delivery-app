
.login-form {
    margin 0 auto
    padding 0em 0
    width 15em
}

    .login-form__text-input {
        @extends $primary-text-input
        border-radius 0
    }

    .login-form__forgot-credentials {
        color $c-accent
        display block
        font-size 0.7em
        font-weight 500
        text-align center
        text-transform uppercase
    }

    .login-form__login-button {
        @extends $primary-button
    }
