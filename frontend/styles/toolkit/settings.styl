// Globally available variables start with $ for easy identification

// Breakpoints
$palm-start = 300px
$hand-start = 600px
$lap-start  = 900px
$desk-start = 1200px
$wall-start = 1500px

// Colors
$c-text = #444
$c-key = #ac222a
$c-shadow = darken(#ac222a, 33%)
$c-accent = #ffe254
$c-base = #e57d00
$c-title = #149caa
$c-light = #f0f0f0
$c-medium = #777
$c-dark = #333
$c-error = #d8041b

// Typography
$f-base-size = 15px
$f-line-height = 20px
$f-line-height-ratio = 1.33 // set explicitly vs computed to avoid rounding errors
$f-base-family = "Lato", "Helvetica Neue", "Arial", sans-serif

// Vertical Rhythm
$gap = $f-line-height
$half-gap = $gap / 2
$double-gap = $gap * 2

// Grid defaults (all easily overridable in mixin)
$grid-default-cols = 12
$grid-default-leading = 0
$grid-default-gutter = 1.6%
$grid-min-width = 960px
$grid-max-width = 1300px

